<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Categories</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
    }
    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #f8f9fa;
      padding: 20px;
    }
    .content {
      flex: 1;
      padding: 20px;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <h2>Admin Dashboard</h2>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="/customers">Manage Customers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/stories">Manage Stories</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/loaitruyen">Manage Categories</a>
      </li>
    </ul>
  </div>
  <div class="content">
    <h1 class="mt-5">Categories</h1>
    <form action="/loaitruyen/add" method="POST" class="mb-4">
      <div class="form-row">
        <div class="form-group col-md-6">
          <input type="text" class="form-control" name="maloaitruyen" placeholder="Category ID" required>
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control" name="tenloaitruyen" placeholder="Category Name" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Add Category</button>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Category ID</th>
          <th>Category Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr>
            <td><%= category.maloaitruyen %></td>
            <td><%= category.tenloai %></td>
            <td>
              <form action="/loaitruyen/delete/<%= category.maloaitruyen %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
              <form action="/loaitruyen/update/<%= category.maloaitruyen %>" method="POST" style="display:inline;">
                <input type="text" class="form-control form-control-sm" name="tenloai" value="<%= category.tenloai %>" required>
                <button type="submit" class="btn btn-warning btn-sm">Update</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>